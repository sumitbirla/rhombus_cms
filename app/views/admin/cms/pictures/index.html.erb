<%= link_to "new photo", new_admin_cms_picture_path(imageable_id: params[:imageable_id], imageable_type: params[:imageable_type]), class: 'btn btn-sm btn-default pull-right' %>

<h2><i class="fa fa-picture-o"></i>&nbsp; <%= @parent || "All Pictures" %></h2>

<%= will_paginate @pictures %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Picture</th>
		<th>Owner</th>
		<th>Uploaded</th>
		<th>Dimensions</th>
		<th>Size</th>
		<th>Votes</th>
		<th>&nbsp;</th>
	</tr>
	<% @pictures.each do |pic| %>
	<tr>
		<td>
			<a href="<%= edit_admin_cms_picture_path(pic) %>">
				<img class="img-polaroid" src="<%= cdn_image_url pic.file_path, 80, 50, 2 %>"/>
			</a>
		</td>
		<td>
			<% if pic.user %>
				<%= link_to pic.user, admin_system_user_path(pic.user) %>
			<% else %>
			 <%= pic.imageable_type %>
			<% end %>
		</td>
		<td><%= systime pic.created_at %></td>
		<td><%= pic.width %> x <%= pic.height %></td>
		<td><%= number_to_human_size(pic.file_size) unless pic.file_size.nil? %></td>
		<td><%= pic.votes || '-'%></td>
		<td>
			<%= link_to "edit", edit_admin_cms_picture_path(pic) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: pic.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>
	</tr>
	<% end %>
</table>



<%= content_for :title do %>
	Pictures
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active">Pictures</li>
<% end %>
