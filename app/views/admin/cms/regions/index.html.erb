<%= link_to "new region", new_admin_cms_region_path, class: 'btn btn-sm btn-default pull-right' %>

<h2><i class="fa fa-globe"></i>&nbsp; Regions</h2>


<%= will_paginate @regions %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name</th>
		<th>Slug</th>
		<th>Default</th>
		<th>Enabled</th>
		<th>Hidden</th>
		<th>Description
		<th>&nbsp;</th>
	</tr>
	<% @regions.each do |reg| %>
	<tr>
		<td><%= link_to reg.name, edit_admin_cms_region_path(reg) %></td>
		<td><%= reg.slug %></td>
		<td><%= raw tick(reg.default) %></td>
		<td><%= raw tick(reg.enabled) %></td>
		<td><%= raw tick(reg.hidden) %></td>
		<td><%= reg.description %></td>
		<td>
			<%= link_to "edit", edit_admin_cms_region_path(reg) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: reg.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>	
	<% end %>
</table>



<%= content_for :title do %>
	Regions
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active">Regions</li>
<% end %>
