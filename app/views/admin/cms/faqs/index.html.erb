<div class="pull-right">
  <%= link_to "setup categories", admin_system_categories_path(type: :faq), class: 'btn btn-sm btn-default' %>
  <%= link_to "new faq", new_admin_cms_faq_path, class: 'btn btn-sm btn-default' %>
</div>
<h2>
  <i class="fa fa-question"></i>&nbsp; FAQ
</h2>

<%= render "admin/shared/search_results_header", object: @locations %>

<%= will_paginate @faqs %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Sort</th>
		<th>Category</th>
		<th>Question</th>
		<th>&nbsp;</th>
	</tr>
	<% @faqs.each do |faq| %>
	<tr>
		<td><%= faq.sort %></td>
		<td><%= faq.category %></td>
		<td><%= faq.question %></td>
		<td>
			<%= link_to "edit", edit_admin_cms_faq_path(faq) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: faq.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>	
	<% end %>
</table>



<% content_for :title do %>
    FAQ
<% end %>



<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active">FAQ</li>
<% end %>
