<div class="pull-right">
  <%= link_to new_admin_cms_faq_path, class: 'btn btn-sm btn-default' do %>
    <i class="fa fa-plus"></i> New FAQ
  <% end %>
  <%= link_to admin_system_categories_path(type: :faq), class: 'btn btn-sm btn-default' do %>
    <i class="fa fa-list-ul"></i> Setup categories
  <% end %>
</div>
<h2>
  <i class="fa fa-question"></i>&nbsp; FAQ
</h2>

<%= render "admin/shared/search_results_header", object: @locations %>

<%= will_paginate @faqs %>
<table class="table table-striped table-condensed">
	<tr>
    <th>ID</th>
		<th>Category</th>
		<th>Question</th>
    <th>Sort</th>
		<th>&nbsp;</th>
	</tr>
	<% @faqs.each do |faq| %>
	<tr>
    <td><%= faq.id %></td>
		<td><%= faq.category %></td>
		<td><%= faq.question %></td>
    <td><%= faq.sort %></td>
		<td>
			<%= link_to "edit", edit_admin_cms_faq_path(faq) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: faq.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>	
	<% end %>
</table>

<%= render 'admin/shared/table_summary', data: @faqs %>



<% content_for :title do %>
    FAQ
<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active">FAQ</li>
<% end %>
