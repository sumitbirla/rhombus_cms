<h2><i class="fa fa-comments-o"></i>&nbsp; Comments</h2>

<%= will_paginate @comments %>
<table class="table table-striped table-condensed">
  <tr>
    <th>Timestamp</th>
    <th>User</th>
    <th>Entity</th>
    <th>Rating</th>
    <th>Comment</th>
    <th>Approved</th>
    <th>Spam</th>
    <th></th>
  </tr>
  <% @comments.each do |c| %>
      <tr>
        <td><%= systime c.created_at %></td>
        <td>
          <% unless c.user_id.nil? %>
              <%= link_to c.author, admin_system_user_path(c.user_id) %>
          <% end %>
        </td>
        <td>
        <% if c.commentable_type == "agent" %>
            <%= link_to Agent.find(c.commentable_id), admin_agents_agent_path(c.commentable_id) %>
        <% elsif c.commentable_type == "product" %>
            <%= link_to Product.find(c.commentable_id), admin_store_product_path(c.commentable_id) %>
        <% end %>
        </td>
        <td>
          <% c.rating.times do  %>
              &#9733;
          <% end %>
        </td>
        <td><%= c.content %></td>
        <td><%= tick c.approved %></td>
        <td><%= tick c.spam %></td>
        <td>
          <%= link_to "edit", edit_admin_cms_comment_path(c) %> &nbsp;
          <%= link_to "delete",
                      { action: "destroy", id: c.id },
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
</table>


<% content_for :title do %>
    Comments
<% end %>


<% content_for :breadcrumbs do %>
    <li><a href="#">CMS</a></li>
    <li class="active">Comments</li>
<% end %>