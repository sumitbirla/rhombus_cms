<h2><%= @menu.title %></h2>
<hr/>

<%= simple_form_for [:admin, :cms, @menu] do |f| %>

  <%= render 'admin/shared/error_messages', object: f.object %>

  <%= f.input :title %>
  <%= f.input :key %>
  <%= f.input :css_class %>
  <%= f.input :notes, as: :text, input_html: {class: 'span6', rows: 3} %>

  <div class="form-actions">
    <%= button_tag "Save changes", :class => "btn btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Please wait ..."} %>
  </div>

<% end %>


<% content_for :breadcrumbs do %>
  <li><a href="#">Web Content</a></li>
  <li><%= link_to "Menus", admin_cms_menus_path %></li>
  <li class="active"><%= @menu.title %></li>
<% end %>
