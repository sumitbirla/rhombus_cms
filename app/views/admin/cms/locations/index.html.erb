<h2>
	<%= link_to "new location", new_admin_cms_location_path, class: 'btn btn-sm btn-default pull-right' %>
	<%= link_to "setup attributes", admin_cms_attributes_path(type: :location), class: 'btn btn-sm btn-default pull-right' %>
	<%= link_to "setup categories", admin_cms_categories_path(type: :location), class: 'btn btn-sm btn-default pull-right' %>
	<i class="fa fa-map-marker"></i>&nbsp; Locations
</h2>

<% unless params[:q].nil? %>
    <div class="alert alert-info">Found <%= @locations.total_entries %> records matching '<%= params[:q] %>'</div>
<% end %>

<%= will_paginate @locations %>
<table class="table table-striped table-condensed">
	<tr>
		<th>Name & address</th>
		<th>Country</th>
		<th>Phone</th>
		<th>&nbsp;</th>
	</tr>
	<% @locations.each do |loc| %>
	<tr>
		<td><%= link_to loc.name, admin_cms_location_path(loc) %></td>
		<td><%= loc.country %></td>
		<td><%= loc.phone %></td>
		<td>
			<%= link_to "edit", edit_admin_cms_location_path(loc) %> &nbsp;
			<%= link_to "delete", 
						  { action: "destroy", id: loc.id }, 
						  method: :delete, 
						  data: { confirm: "Are you sure?" } %>
		</td>	
	<% end %>
</table>



<% content_for :title do %>
    Locations
<% end %>



<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li class="active">Locations</li>
<% end %>
