<h2><i class="fa fa-map-marker"></i>&nbsp; <%= @location.name %></h2>


<%= link_to "new sublocation", new_admin_inventory_sublocation_path(location_id: params[:id]), class: 'btn btn-sm btn-default pull-right' %>

<ul class="nav nav-tabs">
    <li><%= link_to "Summary", edit_admin_cms_location_path(@location) %></li>
    <li><%= link_to "Pictures", pictures_admin_cms_location_path(@location) %></a></li>
    <li><%= link_to "Categories", categories_admin_cms_location_path(@location) %></li>
    <li><%= link_to "Attributes", attributes_admin_cms_location_path(@location) %></li>
  	<li class="active"><a href="#">Sublocations</a></li>
</ul>

<table class="table table-striped table-condensed">
	<tr>
    <th>Designation</th>
		<th>Zone</th>
    <th>Aisle</th>
    <th>Bay</th>
    <th>Level</th>
    <th>Section</th>
    <th>Notes</th>
    <th></th>
	</tr>
	<% @location.sublocations.each do |sub| %>
	<tr>
    <td><%= sub %></td>
		<td><%= sub.zone %></td>
    <td><%= sub.aisle %></td>
    <td><%= sub.bay %></td>
    <td><%= sub.level %></td>
    <td><%= sub.section %></td>
		<td><%= sub.notes %></td>
        <td>
            <%= link_to "edit", edit_admin_inventory_sublocation_path(sub) %> &nbsp;
            <%= link_to "delete",
                    { controller: 'admin/inventory/sublocations', action: "destroy", id: sub.id },
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
        </td>
	</tr>
	<% end %>
</table>



<% content_for :title do %>
    Locations: <%= @location.name%>
<% end %>




<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li><%= link_to "Locations", admin_cms_locations_path %></li>
	<li><%= link_to @location.name, admin_cms_location_path(@location)%> </li>
	<li class="active">edit</li>
<% end %>
