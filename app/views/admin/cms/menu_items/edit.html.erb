<h2><%= @menu_item.menu.title%></h2>
<hr/>

<%= simple_form_for [:admin, :cms, @menu_item], html: { class: 'form-inline' } do |f| %>

	<%= render 'admin/shared/error_messages', object: f.object %>
	
	<%= f.input :menu_id, as: :hidden %>
	
	<%= f.input :title %>
	<%= f.input :sort %>
	<%= f.input :enabled %>
	<%= f.input :link_url %>

	<div class="form-actions">
		<%= f.button :submit %>
	</div>

<% end %>


<% content_for :breadcrumbs do %>
	<li><a href="#">Web Content</a></li>
	<li><%= link_to "Menus", admin_cms_menus_path %></li>
	<li class="active"><%= @menu_item.menu.title %></li>
<% end %>
