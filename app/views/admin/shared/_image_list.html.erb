<form action="/admin/cms/pictures" class="well" method="post">
	<div>
		<%= token_tag %>
		<input type="hidden" name="picture[imageable_id]" value="<%= object.id %>"/>
		<input type="hidden" name="picture[imageable_type]" value="<%= object.class.to_s.downcase %>"/>
		<input type="hidden" name="redirect" value="<%= request.fullpath %>">
		
    	<div>
          <input type="text" name="picture[file_path]" placeholder="select a picture" id="imageFile" class="col-md-6"> &nbsp;
          <input type="button" value="Browse Server" class="btn btn-sm btn-primary" onclick="javascript:BrowseServer();">
        </div>
        <div style="margin-top: 6px;">
            <input type="text" name="picture[caption]" placeholder="Caption for picture (optional)" class="col-md-6">  &nbsp;
            <input type="submit" class="btn btn-sm btn-success" value="Add">
        </div>
	</div>
</form>

<table class="table table-striped table-condensed">
	<tr>
		<th>Picture</th>
		<th>Caption</th>
		<th>Sort</th>
		<th>&nbsp;</th>
	</tr>
	<%
	i = 0
	pictures = object.pictures.order('sort')

	pictures.order('sort').each do |pic| 
		i = i+1%>
	<tr>
		<td>
			<a href="<%= cdn_image_url pic, 700, 600, 0 %>"  data-lightbox="image-1">
				<img class="img-thumbnail" src="<%= cdn_image_url pic, 90, 90, 0 %>"/>
			</a>
		</td>
		<td><%= pic.sort %>: <%= pic.caption %></td>
		<td>
			<% unless i == 1%>
			<%= link_to raw('<i class="icon-circle-arrow-up"></i>'), moveup_admin_cms_picture_path(pic) %>
			<% end %>
			<% unless i == pictures.length %>
			<%= link_to raw('<i class="icon-circle-arrow-down"></i>'), movedown_admin_cms_picture_path(pic) %>
			<% end %>
		</td>
		<td><%= link_to "delete", { action: "destroy", controller: "cms/pictures", id: pic.id }, method: :delete %></td>
	<% end %>
</table>



<% content_for :head do %>
	<script type="text/javascript" src="/ckfinder/ckfinder.js"></script>
	<script>
	function BrowseServer()
	{
		// You can use the "CKFinder" class to render CKFinder in a page:
		var finder = new CKFinder( { connectorPath : '<%= Cache.setting(Rails.configuration.domain_id, :system, 'Static Files Url') %>/ckfinder/core/connector/php/connector.php' });
		//finder.basePath = '../';	// The path for the installation of CKFinder (default = "/ckfinder/").
		finder.selectActionFunction = SetFileField;
		finder.popup();
	}

	// This is a sample function which is called when a file is selected in CKFinder.
	function SetFileField( fileUrl )
	{
		document.getElementById( 'imageFile' ).value = fileUrl.substring(<%= Cache.setting(Rails.configuration.domain_id, :system, 'Static Files Url').length +  6 %>);
	}
	</script>
<% end %>
